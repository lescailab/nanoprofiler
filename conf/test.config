/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nibscbioinformatics/nanoprofiler -profile test,<docker/singularity>
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on GitHub Actions
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  single_end = false
  input = 'https://raw.githubusercontent.com/nibscbioinformatics/testdata/master/nanobodies/test_samples.tsv'
  adapterfile = 'https://raw.githubusercontent.com/nibscbioinformatics/testdata/master/nanobodies/adapters.fa'
}
